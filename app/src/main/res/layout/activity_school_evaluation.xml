<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll"
    android:layout_height="match_parent">
    <View
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"/>
    <include android:id="@+id/title"
        layout="@layout/title_layout"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="580px">
                <ImageView
                    android:src="@mipmap/school_background"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/t_name"
                    android:layout_marginTop="60px"
                    android:text="Smart Apply智能选校工具"
                    android:textSize="56px"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/little_t"
                    android:text="10分钟获取你的选校报告"
                    android:layout_marginTop="50px"
                    android:textSize="40px"
                    android:textColor="@color/white"
                    android:layout_below="@id/t_name"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_below="@id/little_t"
                    android:orientation="horizontal"
                    android:layout_marginTop="60px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/achievement_iv"
                            android:background="@mipmap/achievement"
                            android:layout_width="80px"
                            android:layout_height="80px" />
                        <TextView
                            android:id="@+id/achievement_tv"
                            android:layout_centerHorizontal="true"
                            android:text="个人成绩"
                            android:textColor="@color/mainGreen"
                            android:textSize="40px"
                            android:layout_below="@id/achievement_iv"
                            android:layout_marginTop="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/school_back_iv"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/school_back"
                            android:layout_width="100px"
                            android:layout_height="80px" />
                        <TextView
                            android:id="@+id/school_back_tv"
                            android:layout_centerHorizontal="true"
                            android:text="学校背景"
                            android:textColor="@color/white"
                            android:textSize="40px"
                            android:layout_below="@id/school_back_iv"
                            android:layout_marginTop="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/personal_back_iv"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/personal_back"
                            android:layout_width="120px"
                            android:layout_height="80px" />
                        <TextView
                            android:id="@+id/personal_back_tv"
                            android:layout_centerHorizontal="true"
                            android:text="个人软背景"
                            android:textColor="@color/white"
                            android:textSize="40px"
                            android:layout_below="@id/personal_back_iv"
                            android:layout_marginTop="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/direction_iv"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/direction"
                            android:layout_width="65px"
                            android:layout_height="80px" />
                        <TextView
                            android:id="@+id/direction_tv"
                            android:layout_centerHorizontal="true"
                            android:text="申请方向背景"
                            android:textColor="@color/white"
                            android:textSize="40px"
                            android:layout_below="@id/direction_iv"
                            android:layout_marginTop="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70px">
                    <View
                        android:layout_weight="1"
                        android:background="@color/dark_green"
                        android:layout_width="0px"
                        android:layout_height="20px"/>
                    <View
                        android:layout_weight="2"
                        android:background="@color/dark_green"
                        android:layout_width="0px"
                        android:layout_height="20px"/>
                    <View
                        android:id="@+id/v1"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:layout_width="0px"
                        android:layout_height="20px"/>
                    <View
                        android:id="@+id/v2"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:layout_width="0px"
                        android:layout_height="20px"/>
                    <View
                        android:id="@+id/v3"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_width="0px"
                        android:layout_height="20px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70px">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/school_evaluation_true"
                        android:layout_centerInParent="true"
                        android:layout_width="70px"
                        android:layout_height="70px" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv1"
                            android:background="@drawable/school_evaluation_progress"
                            android:layout_centerInParent="true"
                            android:layout_width="70px"
                            android:layout_height="70px" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv2"
                            android:background="@drawable/school_evaluation_progress"
                            android:layout_centerInParent="true"
                            android:layout_width="70px"
                            android:layout_height="70px" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv3"
                            android:background="@drawable/school_evaluation_progress"
                            android:layout_centerInParent="true"
                            android:layout_width="70px"
                            android:layout_height="70px" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70px">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="1"
                            android:textSize="40px"
                            android:textColor="@color/mainGreen"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv1"
                            android:text="2"
                            android:textSize="40px"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv2"
                            android:text="3"
                            android:textSize="40px"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv3"
                            android:text="4"
                            android:textSize="40px"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>