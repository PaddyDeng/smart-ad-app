<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"/>
    <include android:id="@+id/title"
        layout="@layout/title_layout"/>
    <RelativeLayout
        android:id="@+id/background_rl"
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="380px">
        <ImageView
            android:src="@mipmap/background_test"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/background_title"
            android:text="背景测评"
            android:textStyle="bold"
            android:textSize="50px"
            android:textColor="@color/white"
            android:layout_marginLeft="300px"
            android:layout_marginTop="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="“我该如何合理规划申请时间？”1分钟完成专业测评，即可获得留学评估师提供的全面专业留学评估报告月方案建议，为你指点迷津。"
            android:textColor="@color/white"
            android:textSize="40px"
            android:layout_alignLeft="@id/background_title"
            android:layout_below="@id/background_title"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/school_rl"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:layout_height="380px">
        <ImageView
            android:src="@mipmap/choose_school_test"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/school_title"
            android:text="选校测评"
            android:textStyle="bold"
            android:textSize="50px"
            android:textColor="@color/white"
            android:layout_marginLeft="300px"
            android:layout_marginTop="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="为学生了解自身情况、寻找合适院校，“我目前水平能申到哪些国外学校？”自动生成 选校报告+熟悉申请条件"
            android:textColor="@color/white"
            android:textSize="40px"
            android:layout_alignLeft="@id/school_title"
            android:layout_below="@id/school_title"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enroll_rl"
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="380px">
        <ImageView
            android:src="@mipmap/school_test"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/enroll_title"
            android:text="学校录取测试"
            android:textStyle="bold"
            android:textSize="50px"
            android:textColor="@color/white"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="113dp" />
        <TextView
            android:text="被自己的 Dream School 录取是怎样的体验？来测评下我离名校的距离还差多少。"
            android:textColor="@color/white"
            android:textSize="40px"
            android:layout_alignLeft="@id/enroll_title"
            android:layout_below="@id/enroll_title"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>