<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/line_gray"
    android:layout_height="490px">
    <RelativeLayout
        android:id="@+id/rl"
        android:background="@drawable/white_round"
        android:layout_margin="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="300px">
            <school.lg.overseas.school.view.TopRoundImageView
                android:id="@+id/iv"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="300px" />
            <ImageView
                android:src="@mipmap/play"
                android:layout_centerInParent="true"
                android:layout_width="100px"
                android:layout_height="100px" />
        </RelativeLayout>
        <TextView
            android:id="@+id/name"
            android:layout_below="@id/rl1"
            android:textSize="40px"
            android:textColor="@color/black"
            android:text="测试"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_below="@id/name"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <ImageView
                android:id="@+id/time_iv"
                android:src="@mipmap/clock"
                android:layout_width="60px"
                android:layout_height="60px" />

            <TextView
                android:id="@+id/num"
                android:text="1233333"
                android:textSize="35px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/num_iv"
                android:layout_toLeftOf="@+id/num"
                android:layout_centerVertical="true"
                android:src="@mipmap/look"
                android:layout_marginRight="10px"
                android:layout_width="50px"
                android:layout_height="50px" />
            <TextView
                android:id="@+id/time"
                android:text="测试"
                android:textSize="35px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/time_iv"
                android:layout_toLeftOf="@id/num_iv"
                android:layout_marginRight="20px"
                android:layout_marginLeft="10px"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="250px"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>