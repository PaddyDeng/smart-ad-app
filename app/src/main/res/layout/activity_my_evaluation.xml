<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/line_gray"
    android:layout_height="match_parent">
    <View
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"/>
    <include android:id="@+id/title"
        layout="@layout/title_layout"/>
    <RelativeLayout
        android:id="@+id/choose_evaluation"
        android:background="@drawable/search_rl"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="400px">
        <RelativeLayout
            android:layout_marginLeft="100px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="80px"
                android:layout_width="200px"
                android:layout_height="200px">
                <ImageView
                    android:background="@drawable/black_yuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        <ImageView
            android:layout_centerInParent="true"
            android:background="@mipmap/school_b"
            android:layout_width="100px"
            android:layout_height="100px" />
            </RelativeLayout>
        <TextView
            android:text="选校测评"
            android:textSize="40px"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50px"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/see_choose_school"
            android:layout_marginTop="100px"
            android:background="@drawable/green_side"
            android:text="查看详情"
            android:textSize="40px"
            android:textColor="@color/mainGreen"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:layout_width="250px"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/join_choose_school"
            android:layout_marginBottom="100px"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_green"
            android:text="参加测评"
            android:textSize="40px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:layout_width="250px"
            android:layout_height="60px" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/school_evaluation"
        android:background="@drawable/search_rl"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="400px">
        <RelativeLayout
            android:layout_marginLeft="100px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="80px"
                android:layout_width="200px"
                android:layout_height="200px">
                <ImageView
                    android:background="@drawable/black_yuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@mipmap/gailv_1"
                    android:layout_width="100px"
                    android:layout_height="100px" />
            </RelativeLayout>
            <TextView
                android:text="学校录取测评"
                android:textSize="40px"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/see_school"
            android:layout_marginTop="100px"
            android:background="@drawable/green_side"
            android:text="查看详情"
            android:textSize="40px"
            android:textColor="@color/mainGreen"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:layout_width="250px"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/join_school"
            android:layout_marginBottom="100px"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_green"
            android:text="参加测评"
            android:textSize="40px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:layout_width="250px"
            android:layout_height="60px" />
    </RelativeLayout>
</LinearLayout>