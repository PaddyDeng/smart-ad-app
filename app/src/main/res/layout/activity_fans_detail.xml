<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"/>
    <include layout="@layout/title_layout"/>
    <include layout="@layout/item_fans"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/question_rl"
            android:layout_width="match_parent"
            android:layout_height="250px">
            <ImageView
                android:id="@+id/question_iv"
                android:background="@mipmap/leave_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/question_iv"
                android:layout_marginLeft="50px"
                android:text="Ta的提问"
                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/question_num"
                android:gravity="center"
                android:textSize="40px"
                android:text="0"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ask_rl"
            android:layout_width="match_parent"
            android:layout_height="250px">
            <ImageView
                android:id="@+id/ask_iv"
                android:background="@mipmap/leave_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ask_iv"
                android:layout_marginLeft="50px"
                android:text="Ta的回答"
                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ask_num"
                android:gravity="center"
                android:textSize="40px"
                android:text="0"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fans_rl"
            android:layout_width="match_parent"
            android:layout_height="250px">
            <ImageView
                android:id="@+id/fans_iv"
                android:background="@mipmap/leave_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fans_iv"
                android:layout_marginLeft="50px"
                android:text="Ta的粉丝"
                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fans_num"
                android:gravity="center"
                android:textSize="40px"
                android:text="0"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/follow_rl"
            android:layout_width="match_parent"
            android:layout_height="250px">
            <ImageView
                android:id="@+id/follow_iv"
                android:background="@mipmap/leave_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/follow_iv"
                android:layout_marginLeft="50px"
                android:text="Ta的关注"
                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/follow_num"
                android:gravity="center"
                android:textSize="40px"
                android:text="0"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="40px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>