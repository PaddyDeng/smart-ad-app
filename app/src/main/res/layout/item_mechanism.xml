<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="300px">
    <ImageView
        android:id="@+id/iv"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:layout_width="250px"
        android:layout_height="250px" />
    <RelativeLayout
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/name_rl"
            android:layout_marginTop="30px"
            android:layout_width="match_parent"
            android:layout_height="50px">
            <TextView
                android:id="@+id/name"
                android:textSize="45px"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/v1"
                android:layout_toRightOf="@id/name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@color/gray_white"
                android:layout_width="1px"
                android:layout_height="50px"/>
            <TextView
                android:id="@+id/tv1"
                android:text="好评度"
                android:textSize="40px"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/v1"
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/star_ll"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/tv1"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40px"
                    android:background="@mipmap/good_star"
                    android:layout_height="40px" />
                <ImageView
                    android:layout_width="40px"
                    android:background="@mipmap/good_star"
                    android:layout_height="40px" />
                <ImageView
                    android:layout_width="40px"
                    android:background="@mipmap/good_star"
                    android:layout_height="40px" />
                <ImageView
                    android:layout_width="40px"
                    android:background="@mipmap/good_star"
                    android:layout_height="40px" />
                <ImageView
                    android:layout_width="40px"
                    android:background="@mipmap/good_star_1"
                    android:layout_height="40px" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/content"
            android:layout_below="@id/name_rl"
            android:textSize="40px"
            android:layout_marginTop="30px"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_width="match_parent"
            android:layout_height="50px">
            <RelativeLayout
                android:id="@+id/appointment"
                android:background="@drawable/green_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/telephone"
                    android:layout_marginLeft="10px"
                    android:layout_centerVertical="true"
                    android:layout_width="30px"
                    android:layout_height="30px" />
                <TextView
                    android:text="免费预约中介顾问"
                    android:layout_centerVertical="true"
                    android:textSize="30px"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/num"
                android:layout_toRightOf="@+id/appointment"
                android:layout_marginLeft="10px"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_marginLeft="30px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_white"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>