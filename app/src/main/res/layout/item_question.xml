<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="150px">
        <ImageView
            android:id="@+id/portrait"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_width="120px"
            android:layout_height="130px" />
        <RelativeLayout
            android:layout_toRightOf="@id/portrait"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:textSize="40px"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time"
                android:textSize="35px"
                android:layout_below="@id/name"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="40px"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content"
        android:textSize="35px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/lable_ll"
        android:orientation="horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="60px"></LinearLayout>
    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="50px">
        <ImageView
            android:id="@+id/follow_iv"
            android:src="@mipmap/gray_hot"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/tv1"
            android:text="关注度"
            android:textSize="35px"
            android:layout_toRightOf="@id/follow_iv"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/follow_num"
            android:layout_toRightOf="@+id/tv1"
            android:layout_marginLeft="10px"
            android:textSize="35px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv2"
            android:text="个回答"
            android:textSize="35px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/answer_num"
            android:layout_toLeftOf="@id/tv2"
            android:layout_marginRight="10px"
            android:textSize="35px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toLeftOf="@id/answer_num"
            android:background="@mipmap/leave_1"
            android:layout_marginRight="10px"
            android:layout_width="50px"
            android:layout_height="50px" />
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_marginLeft="30px"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</LinearLayout>