<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <TextView
            android:text="实习/工作经验:"
            android:textSize="40px"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/company_rl"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@drawable/gray_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/company_tv"
                android:text="未选择"
                android:textSize="40px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/down_arrow_true"
                android:layout_marginRight="30px"
                android:layout_width="30px"
                android:layout_height="30px" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/gray_round"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="300px">
    <EditText
        android:id="@+id/experience_et"
        android:gravity="start"
        android:textSize="40px"
        android:hint="请如实填写跟申请方向相关的工作经验，若没有完整工作经验，请填写相关实习经验，描述不少于30字，可不填"
        android:layout_margin="20px"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:text="项目经验:"
        android:textSize="40px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@drawable/gray_round"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <EditText
            android:id="@+id/project_et"
            android:gravity="start"
            android:textSize="40px"
            android:hint="请如实填写跟申请方向相关的项目经验，如比赛经历，商业项目，试验项目，论文发表等，描述不少于30字，可不填"
            android:layout_margin="20px"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
    android:text="海外留学:"
    android:textSize="40px"
    android:layout_marginLeft="40px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@drawable/gray_round"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <EditText
            android:id="@+id/study_abroad_et"
            android:gravity="start"
            android:textSize="40px"
            android:hint="请如实填写海外留学经历，如交换项目，海外实践课程等，可不填"
            android:layout_margin="20px"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:text="公益活动:"
        android:textSize="40px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@drawable/gray_round"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <EditText
            android:id="@+id/welfare_et"
            android:gravity="start"
            android:textSize="40px"
            android:hint="请如实填写所参与公益项目，可不填"
            android:layout_margin="20px"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:text="获奖经历:"
        android:textSize="40px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@drawable/gray_round"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <EditText
            android:id="@+id/wnning_et"
            android:gravity="start"
            android:textSize="30px"
            android:hint="请如实填写获奖经历，可不填"
            android:layout_margin="20px"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginBottom="100px"
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <TextView
            android:id="@+id/last"
            android:text="上一步"
            android:textColor="@color/white"
            android:textSize="45px"
            android:gravity="center"
            android:background="@drawable/green_next"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/next"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="45px"
            android:gravity="center"
            android:layout_marginLeft="40px"
            android:background="@drawable/green_next"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>