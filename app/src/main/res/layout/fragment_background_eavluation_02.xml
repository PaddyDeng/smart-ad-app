<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_iv1"
        android:src="@mipmap/background_1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="530px" />
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginRight="40px"
    android:layout_marginLeft="40px"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/concern_t"
        android:textSize="45px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/concern_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:text="7 请补充您想了解的问题"
        android:textSize="45px"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:gravity="start"
        style="@style/EditTextStyle"
        android:id="@+id/understand_et"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="300px" />
    <TextView
        android:id="@+id/name_t"
        android:layout_marginTop="10px"
        android:textSize="45px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/name_et"
        style="@style/EditTextStyle"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="100px" />
    <TextView
        android:id="@+id/phone_t"
        android:textSize="45px"
        android:layout_marginTop="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/phone_et"
        android:layout_marginTop="10px"
        style="@style/EditTextStyle"
        android:inputType="number"
        android:maxLength="11"
        android:layout_width="match_parent"
        android:layout_height="100px" />
    <TextView
        android:id="@+id/num_t"
        android:layout_marginTop="10px"
        android:textSize="45px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/num_et"
        android:layout_marginTop="10px"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="100px" />
    <LinearLayout
        android:layout_marginTop="120px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <TextView
            android:id="@+id/previous_step"
            android:layout_weight="1"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@drawable/green_next"
            android:text="上一步"
            android:textSize="45px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/submit"
            android:layout_weight="1"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:text="提交"
            android:textSize="45px"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/green_next"
            android:layout_width="0px"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="120px"/>
    </LinearLayout>
</LinearLayout>