                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></school.lg.overseas.school.view.StrongRecycler>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/characteristic_document"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="14px"
                    android:layout_width="58px"
                    android:layout_height="58px" />
                <TextView
                    android:layout_marginLeft="95px"
                    android:layout_marginTop="20px"
                    android:text="在线留学申请"
                    android:textSize="38px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/document_more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="30px"
                    android:text="more >"
                    android:textSize="38px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/v3"
                    android:layout_marginTop="78px"
                    android:background="@color/line_gray"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_height="2px"/>
                <school.lg.overseas.school.view.StrongRecycler
