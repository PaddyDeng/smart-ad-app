<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"/>
    <RelativeLayout
        android:background="@color/mainGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/title_iv"
            android:src="@mipmap/home_title"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:layout_width="300px"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/search_btn"
            android:background="@drawable/home_round_title"
            android:layout_toRightOf="@id/title_iv"
            android:layout_margin="28px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/search_iv"
                android:src="@mipmap/title_search"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_width="50px"
                android:layout_height="50px" />
            <TextView
                android:text="搜索感兴趣的内容"
                android:textColor="@color/white"
                android:textSize="40px"
                android:layout_toRightOf="@id/search_iv"
                android:layout_marginLeft="50px"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="600px">
                <school.lg.overseas.school.view.carouselFigure.ImageSlideshow
                    android:id="@+id/imgslideshow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="260px">
                <RelativeLayout
                    android:id="@+id/school"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/school"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="54px"
                        android:layout_width="120px"
                        android:layout_height="120px" />
                    <TextView
                        android:text="查院校"
                        android:textSize="36px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="30px"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ranking"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/ranking"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="54px"
                        android:layout_width="120px"
                        android:layout_height="120px" />
                    <TextView
                        android:text="看排名"
                        android:textSize="36px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="30px"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/specialty"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/specialty"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="54px"
                        android:layout_width="120px"
                        android:layout_height="120px" />
                    <TextView
                        android:text="专业库"
                        android:textSize="36px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="30px"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/knowledge_base"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/knowledge_base"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="54px"
                        android:layout_width="120px"
                        android:layout_height="120px" />
                    <TextView
                        android:text="Mentor课程"
                        android:textSize="36px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="30px"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="260px">
                <RelativeLayout
                    android:id="@+id/do_test"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
